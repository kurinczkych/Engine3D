    <None Remove="Textures\font2.PNG" />
    <None Remove="Textures\High.png" />
    <None Remove="Textures\High_red.png" />
    <None Remove="Textures\High_test.png" />
    <None Remove="Textures\red.png" />
    <None Remove="Textures\rred.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FontStashSharp" Version="1.2.8" />
    <PackageReference Include="MagicPhysX" Version="1.0.0" />
